{
	"name": "lgbta-wiki-bot",
	"version": "0.0.1",
	"description": "lgbta wiki bot",
	"main": "dist/index.js",
	"scripts": {
		"test": "yarn run lint && yarn run build",
		"build": "yarn rimraf dist/ && yarn tsc",
		"lint": "yarn eslint --ext js,jsx,ts,tsx src",
		"start": "yarn build && node --trace-warnings --enable-source-maps dist/index.js",
		"format": "yarn prettier --write .",
		"format:check": "yarn prettier --check ."
	},
	"repository": "https://github.com/lgbta-wiki/bot",
	"author": "Skye <69115669+Lisenaaaa@users.noreply.github.com>",
	"license": "UNLICENSED",
	"packageManager": "yarn@3.2.0",

	"devDependencies": {
		"@types/ms": "^0.7.31",
		"@types/pg": "^8.6.4",
		"@types/rimraf": "^3.0.2",
		"@types/validator": "^13.7.1",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"discord-api-types": "^0.26.1",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5",
		"validator": "^13.7.0"
	},
	"dependencies": {
		"@discordjs/builders": "^0.12.0",
		"@sapphire/decorators": "^4.2.2",
		"@sapphire/discord.js-utilities": "^4.6.2",
		"@sapphire/framework": "next",
		"@sapphire/pieces": "^3.2.0",
		"@sapphire/plugin-editable-commands": "^1.1.3",
		"@sapphire/utilities": "^3.3.0",
		"@types/node": "^17.0.17",
		"chalk": "4.0.0",
		"discord.js": "^13.6.0",
		"got": "11.8.3",
		"moment": "^2.29.2"
	},
	"prettier": {
		"printWidth": 200,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "es5",
		"bracketSpacing": true,
		"arrowParens": "always",
		"embeddedLanguageFormatting": "auto"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"ignorePatterns": [
			"dist"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-non-null-assertion": "off"
		}
	}
}
